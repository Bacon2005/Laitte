<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="210.0" prefWidth="350.0" style="-fx-background-radius: 20; -fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #3BB38E, #C0CFB3);"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.laitte.Managers.ConfirmationPopUpController">
   <children>
      <AnchorPane layoutX="-2.0" layoutY="10.0" prefHeight="36.0" prefWidth="350.0" style="-fx-background-radius: 20 20  0 0; -fx-background-color: White;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Button fx:id="closeButton" contentDisplay="RIGHT" layoutX="311.0" layoutY="-1.0" prefHeight="17.0" prefWidth="36.0" text="X" textFill="#104b3b">
               <font><Font name="System Bold" size="18.0" /></font>
            </Button>
         </children>
      </AnchorPane>

      <AnchorPane layoutX="3.0" layoutY="15.0" prefHeight="103.0" prefWidth="310.0" style="-fx-background-color: rgba(255, 255, 255, 0.5); -fx-background-radius: 25;" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="50.0">
         <children>
            <Label layoutX="82.0" layoutY="3.0" text="Add Item?" textFill="#104b3b">
               <font><Font name="System Bold" size="32.0" /></font>
            </Label>

            <Label fx:id="messageLabel" layoutX="26.0" layoutY="47.0" prefHeight="46.0" prefWidth="285.0" text="Please confirm that you want to add this meal/drink to your order." textFill="#104b3b" wrapText="true">
               <font><Font size="15.0" /></font>
            </Label>

            <ImageView fx:id="popupImage" fitWidth="80.0" fitHeight="80.0" layoutX="210.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true"/>
         </children>
      </AnchorPane>

      <Button fx:id="cancelBtn" layoutX="72.0" layoutY="162.0" prefHeight="29.0" prefWidth="87.0" style="-fx-background-radius: 20; -fx-background-color: White;" text="Cancel">
         <font><Font name="System Bold" size="16.0" /></font>
      </Button>

      <Button fx:id="confirmBtn" layoutX="192.0" layoutY="162.0" prefHeight="29.0" prefWidth="87.0" style="-fx-background-radius: 20; -fx-background-color: White;" text="Confirm">
         <font><Font name="System Bold" size="16.0" /></font>
      </Button>
   </children>
</AnchorPane>
